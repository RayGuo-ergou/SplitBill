<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layoutEventItems"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/item_event_recycle_background"
    android:layout_marginBottom="5dp"
    android:orientation="vertical"
    android:padding="10dp">


    <TextView

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_marginTop="12dp"
        android:padding="5dp"

        android:text="@string/event_name"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/nameEvent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        android:background="@drawable/item_event_background"
        android:padding="5dp"

        android:textSize="12sp"
        tools:text="name Event"
        android:textColor="@color/white"/>

    <TextView

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_marginTop="12dp"
        android:padding="5dp"

        android:text="@string/event_description"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/descriptionEvent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:layout_marginTop="6dp"
        android:background="@drawable/item_event_background"
        android:padding="5dp"
        android:textSize="12sp"
        android:textColor="@color/white"
        tools:text="name Event"/>


    <TextView

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_marginTop="12dp"
        android:padding="5dp"

        android:text="@string/total_amount"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/eventAmount"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        android:background="@drawable/item_event_background"
        android:padding="5dp"
        android:textColor="@color/white"
        android:textSize="12sp"
        tools:text="name Event" />

    <TextView

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_marginTop="12dp"
        android:padding="5dp"

        android:text="@string/number_of_people"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/peopleNumber"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        android:background="@drawable/item_event_background"
        android:padding="5dp"
        android:textColor="@color/white"
        android:textSize="12sp"
        tools:text="name Event" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/pay_this_event"
        android:id="@+id/payBtn"
        />


</LinearLayout>